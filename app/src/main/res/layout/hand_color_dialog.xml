<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hand_color_dialog_layout">
    <com.blacksite.clocker.view.MuseoTextView
        android:id="@+id/hand_color_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10dp"

        android:textSize="20sp"
        android:text="Choose Color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.25">
            <View
                android:id="@+id/hand_color_grey"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/grey_circle"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.25">
            <View
                android:id="@+id/hand_color_blue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blue_circle"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.25">
            <View
                android:id="@+id/hand_color_red"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_circle"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.25">

            <View
                android:id="@+id/hand_color_green"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_circle"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp">
        <com.blacksite.clocker.view.MuseoTextView
            android:id="@+id/hand_color_dialog_ok_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDarker"
            android:text="OK"/>
        <com.blacksite.clocker.view.MuseoTextView
            android:id="@+id/hand_color_dialog_cancel_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toLeftOf="@+id/hand_color_dialog_ok_button"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryDarker"
            android:gravity="center"
            android:text="CANCEL"/>
    </RelativeLayout>

</LinearLayout>