<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="#00000000">
    <ImageView
        android:id="@+id/clock_face_imageview_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/clock_dial_imageview_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
    <AnalogClock
        android:id="@+id/hand_1_widget_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dial="@drawable/transparent_512"
        android:hand_minute="@drawable/minute_hand_1_grey"
        android:hand_hour="@drawable/hour_hand_1_grey"/>
    <AnalogClock
        android:id="@+id/hand_1_widget_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dial="@drawable/transparent_512"
        android:hand_minute="@drawable/minute_hand_1_blue"
        android:hand_hour="@drawable/hour_hand_1_blue"
        android:visibility="gone"/>
    <AnalogClock
        android:id="@+id/hand_1_widget_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dial="@drawable/transparent_512"
        android:hand_minute="@drawable/minute_hand_1_red"
        android:hand_hour="@drawable/hour_hand_1_red"
        android:visibility="gone"/>
    <AnalogClock
        android:id="@+id/hand_1_widget_green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dial="@drawable/transparent_512"
        android:hand_minute="@drawable/minute_hand_1_green"
        android:hand_hour="@drawable/hour_hand_1_green"
        android:visibility="gone"/>

</RelativeLayout>